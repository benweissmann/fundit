    <ul>
    <% @volunteer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @volunteer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "First Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Last Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "About you", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :bio, :class => 'text_area', :id => 'about_volunteer' %>
    	<p id="counter" class="help-block"></p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :avatar_url, "Profile Image", :class => 'control-label' %>
    <div class="controls">
      <a class="btn filepicker-btn">Pick a file</a>
      <br /><br />
      <%= profile_image_tag_for @volunteer %>
      <%= f.hidden_field :avatar_url, :id => 'avatar_url_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, 'Confirm Password', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel',
                organizations_path, :class => 'btn' %>
  </div>
<% end %>
