<div class="page-header">
  <%= profile_image_tag_for @organization %>
  <h1><%= @organization.name %></h1>

  <div class="toolbar">
    <!-- <%= link_to 'Back', organizations_path, :class => 'btn'  %> -->
    <% if current_user == @organization %>
      <%= link_to 'Edit Organization', edit_organization_path(@organization), :class => 'btn' %>
    <% end %>
  </div>

</div>

<dl class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <div class="biobox">
        <strong>About <%= @organization.name %></strong><br />
        <%= @organization.bio %>
        <br /><br />
        <strong>Email</strong><br />
        <i><%= @organization.email %></i>
      </div>
    </div>

    <div class="span8">
      <div class="eventsbox">
        <h2>Upcoming Events</h2>
        <% @organization.events.each do |event| %>
        <div class="event">
            <%= link_to event.name, organization_event_path(@organization, event) %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
